<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/ivMusic"
        android:src="@drawable/ic_music"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/ivStop"
        android:contentDescription="@string/todo" />
    <TextView
        android:id="@+id/txtName"
        android:textColor="#7019c1"
        android:textSize="20sp"
        android:text="@string/song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_alignStart="@+id/txtSinger" />

    <TextView
        android:id="@+id/txtSinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivPlay"
        android:layout_marginStart="74dp"
        android:text="@string/singer"
        android:textColor="#259e06"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/ivPlay"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ivMusic"
        android:layout_marginEnd="70dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/ic_play" />

    <ImageView
        android:id="@+id/ivStop"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txtName"
        android:layout_marginEnd="18dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/ic_stop" />

</RelativeLayout>